{
  "name": "coal-css",
  "version": "1.0.0",
  "description": "Minimal CSS Framework for semantic HTML",
  "author": "Joona Viertola",
  "license": "MIT",
  "main": "css/coal.css",
  "scripts": {
    "build:sass": "sass --style expanded --source-map --embed-sources --no-error-css scss/:css/",
    "watch:sass": "nodemon --watch scss/ --ext scss --exec 'npm run build:sass'",

    "watch": "npm run watch:sass",
    "serve": "serve"
  },
  "devDependencies": {
    "nodemon": "^2.0.16",
    "sass": "^1.51.0",
    "serve": "^13.0.2"
  }
}
